<% provide(:title, @restaurant.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="restaurant_info">
<h1><%= @restaurant.name %></h1>

<br />neighborhood: <%= @restaurant.neighborhood %>
<br />address: <%= @restaurant.address %>
<br />postal code: <%= @restaurant.postal_code %>
<br />latitude: <%= @restaurant.latitude %>
<br />longitude: <%= @restaurant.longitude %>
<br />stars: <%= @restaurant.stars %>
<br />review count: <%= @restaurant.review_count %>
<br />is <%= @restaurant.is_open %> now
<br />alcohol: <%= @restaurant.alcohol %>
<br /><table class="table-striped" width="100%" border="1"><caption><h3>ambience</h3></caption>
<tr><th>romantic</th><th>intimate</th><th>classy</th><th>hipster</th></tr>
<tr><td><%= @restaurant.ambience_romantic %></td>
<td><%= @restaurant.ambience_intimate %></td>
