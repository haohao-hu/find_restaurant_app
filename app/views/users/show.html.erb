<% provide(:title, @user.name)%>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
<h1><%= @user.name %>,</h1><h2><%= @user.email %></h2><br /><h2>average stars: <%= @user.average_stars %></h2>
</section>
</aside>
  <div class="col-md-8">
    <% if @user.reviews.any? %>
      <h3>Reviews (<%= @user.reviews.count %>)</h3>
      <ol class="reviews">
        <%= render @reviews %>
      </ol>
      <%= will_paginate @reviews %>
    <% end %>
  </div>
</div>

