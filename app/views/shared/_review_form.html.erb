<%= form_for(@review) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.label "restaurant:" %>
  	<% restaurants_array = Restaurant.all.map {|restaurant| ["#{restaurant.name}, #{restaurant.address}", restaurant.id]} %>
  	<%= f.select(:restaurant_id, options_for_select(restaurants_array), class: 'form-control') %>
  	<%= f.label "stars:" %>    
      <%= f.select(:stars,[nil,1,1.5,2,2.5,3,3.5,4,4.5,5], class: 'form-control') %>
    <%= f.text_area :text, placeholder: "Write new review...", class:'form-control' %>
  </div>
  <%= f.submit "Post", class: "btn btn-success" %>
<% end %>